@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Şehir</th>
    <th>Fiyat</th>
    <th>Kapasite</th>
    <th>Sitede Gör</th>
    <th>Sil</th>
    <th>Güncelle</th>
</tr>
@foreach (var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.City</td>
            <td>@item.Price</td>
            <td>@item.Capacity</td>
          <td><a href="#" class="btn btn-outline-info">Sitede Gör</td>
          <td><a href="#" class="btn btn-outline-danger">Sil</td>
          <td><a href="#" class="btn btn-outline-success">Güncelle</td>        
        </tr>
    }
</table>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Tur Rotası</a>